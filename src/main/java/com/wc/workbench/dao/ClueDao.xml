    <insert id="saveClue">
        insert into tbl_clue
        (
            `id`,
            `fullname`,
            `appellation`,
            `owner`,
            `company`,
            `job`,
            `email`,
            `phone`,
            `website`,
            `mphone`,
            `state`,
            `source`,
            `description`,
            `contactSummary`,
            `nextContactTime`,
            `address`,
            `createBy`,
            `createTime`
        )
        values
        (
            #{id},
            #{fullname},
            #{appellation},
            #{owner},
            #{company},
            #{job},
            #{email},
            #{phone},
            #{website},
            #{mphone},
            #{state},
            #{source},
            #{description},
            #{contactSummary},
            #{nextContactTime},
            #{address},
            #{createBy},
